<div class="signup-container">
    <div class="signup-card">
        <h2 class="signup-header">Signup here!</h2>
        <div class="form-data">
            <button class="login-btn" id="login">Login</button>
        </div>
        <form class="signup-form">
            <div>
                <label for="username">Username:</label>
                <input type="text" class="form-input" id="signup-username">
            </div>
            <div class="form-data">
                <label for="email">Email:</label>
                <input class="form-input" type="text" id="signup-email" />
            </div>
            <div class="form-data">
                <label for="password">Password:</label>
                <input class="form-input" type="password" id="signup-password" />
            </div>
            <div class="form-data">
                <label for="description"></label>
                <input type="text" name="description" id="description">
            </div>

            <div class="form-data">
                <button class="signup-btn" type="submit">Signup</button>
            </div>

        </form>
    </div>

    <div>
        <img src="{{photo-url}}" alt="Photo of the user">
        <button id="upload_widget" class="cloudinary-button">Upload files</button>
        <h2>{{first-name last-name}}</h2>
        <select name="code-type" id="code-type"></select>
        <option value="">Choose a specialty:</option>
        <option value="Front-End">Front-End</option>
        <option value="Back-end">Back-End</option>
    </div>

